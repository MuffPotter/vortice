<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>7.2</LangVersion>
    <Description>Vortice.Graphics library for cross platform application support</Description>
  </PropertyGroup>
  
  <ItemGroup Condition="'$(VorticeD3D12)' == 'true'">
    <Compile Include="Backends\D3D12\**\*.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\core\Vortice.Mathematics\Vortice.Mathematics.csproj" />
    <ProjectReference Include="..\..\core\Vortice\Vortice.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.5.1" />
    <PackageReference Include="SharpDX.Direct3D11" Version="4.2.0" Condition="'$(VorticeD3D11)' == 'true'" />
    <PackageReference Include="SharpDX.Direct3D12" Version="4.2.0" Condition="'$(VorticeD3D12)' == 'true'" />
  </ItemGroup>

</Project>
