<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;uap10.0.16299</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>7.2</LangVersion>
    <GenerateDocumentationFile Condition=" '$(Configuration)' == 'Release' ">true</GenerateDocumentationFile>
    <Description>Vortice.Application library for cross platform application support</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Backends\**\*.cs" />
    <None Include="Backends\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(VorticeD3D11)' == 'true' or '$(VorticeD3D12)' == 'true'">
    <Compile Include="Backends\D3D\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(VorticeD3D11)' == 'true'">
    <Compile Include="Backends\D3D11\**\*.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\..\core\Vortice.Mathematics\Vortice.Mathematics.csproj" />
    <ProjectReference Include="..\..\core\Vortice\Vortice.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.5.1" />
    <PackageReference Include="SharpDX.Direct3D11" Version="4.2.0" Condition="'$(VorticeD3D11)' == 'true'" />
    <PackageReference Include="SharpDX.Direct3D12" Version="4.2.0" Condition="'$(VorticeD3D12)' == 'true'" />
  </ItemGroup>

</Project>
